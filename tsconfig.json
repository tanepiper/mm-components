{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es7"
    ],
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": []
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.d.ts"
  ]
}
